.loader
  min-height 500px
  background url(/img/loader.gif) center no-repeat

.helper
  font-size 0.9em
  color #bbb

.results
  margin-top 0.5em

.tracks, .artists, .albums
  font-size 0.9em
  > li:nth-child(odd)
    background-color #ddd

.track, .album
  display inline-block
  width 20em
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

.requests
  .request
    clear both
    &:nth-child(odd)
      background-color #ddd
    &:nth-child(even)
      background-color #bbb
    label
      float left
      width 10em
      padding 1em
    iframe, button
      width 150px
      height 28px
      margin 1em 0px
    button.post-to-facebook
      background #eee url(/img/facebook.png) left no-repeat
      cursor pointer

