.loader
  min-height 500px
  background url(/img/loader.gif) center no-repeat

.helper
  font-size 0.9em
  color #bbb

.results
  margin-top 0.5em

.tracks, .artists, .albums
  font-size 0.9em
  > li:nth-child(odd)
    background-color #ddd

.track, .album
  display inline-block
  width 20em
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

.requests
  .request
    clear both
    &:nth-child(odd)
      background-color #ddd
    &:nth-child(even)
      background-color #bbb
    label
      float left
      width 8em
      padding 1em
      font-size 0.9em
      text-align center
    iframe, button
      width 150px
      height 28px
      margin 1em 0px
    button.post-to-facebook
      float left
      background #eee url(/img/facebook.png) 2px no-repeat
      cursor pointer
      font-weight bold
      border 1px solid #999
      border-radius 4px
      padding-left 10px
      margin-top 16px
      margin-right 1em
      &:hover
        background-color #ddd

.facebook-login
  display block
  padding 1em
  background lightblue url(/img/facebook.png) 10px no-repeat
  cursor pointer
  color black
  text-decoration none
  padding-left 40px

